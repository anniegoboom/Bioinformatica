.content{:'ng-app' => 'app'}
  = render :partial => 'nav'
  .container#bioinformatica-main{:'ng-controller' => 'bioinformatica_controller'}
    #stuff{:'ng-switch' => 'type'}
      #companies{:'ng-switch-when' => 'company'}
        = render :partial => 'companies'
      #programs{:'ng-switch-when' => 'drug'}
        .container.span3
          = render :partial => 'tags'
        .container.span8
          = render :partial => 'programs'
      #conversations{:'ng-switch-when' => 'snippet'}
        .container.span3
          = render :partial => 'tags'
        .container.span8
          = render :partial => 'snippets'
      #tag{:'ng-switch-when' => 'tag'}
        .container.span3
          = render :partial => 'tags'
        .container.span8
          = render :partial => 'programs'
          = render :partial => 'snippets'
