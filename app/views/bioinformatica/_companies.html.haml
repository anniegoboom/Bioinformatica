.container.span12{:'ng-controller' => 'company_controller'}
  .container#companies-list{:'ng-show' => '!one_company'}
    %h3= 'All Companies'
    %ul.no-style
      .li{:'ng-repeat' => 'c in companies'}
        %a{:'ng-click' => "select_company(c.id)"}
          .span{:'ng-show' => "c.ticker"}= "[ {{c.ticker}} ]"
          = "{{c.name}}"
  .container#company-description{:'ng-show' => 'one_company'}
    %a{:'ng-click' => 'select_all()'}= '<-- Back'
    %h1= "{{one_company.name}} ({{one_company.ticker}})"
    .span3#company-financials
      %h3= 'Financials'
      %ul.no-style
        %li= "Price: $ {{one_company.financials.price}}"
        %li= "52-week high: $ {{one_company.financials.f52high}}"
        %li= "52-week low: $ {{one_company.financials.f52low}}"
        %li= "Cash: ${{one_company.financials.cash}}"
        %li= "Market Cap: $ {{one_company.financials.market_cap}}"
        %li= "Shares Out: {{one_company.financials.shares_out}}"
        %li= "3 Month Average Daily Volume: {{one_company.financials.three_month_volume}}"
        %li= "3 Month Average Daily $ Volume: $ {{one_company.financials.three_month_dollar_volume}} "
        %li= "Burn: $ {{one_company.financials.burn}}"
        %li= "Runway: {{one_company.financials.runway}}"
    .span8#company-details
      .row#product-pipeline
        %h3= 'Product Pipeline'
        %table
          %tr.program{:'ng-repeat' => 'p in one_company.programs'}
            %td
              %a{:'ng-click' => "select_program(p.id)"}= "{{p.name}}"
            %td="{{p.description}}"
      .row#timeline
        %h3= 'Timeline'
        %ul.no-style
          %li
      .row#diligence
        %h3= 'Diligence'
      .row#SEC
        %h3= 'SEC Filings'


