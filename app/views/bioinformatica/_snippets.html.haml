#snippets-container{:'ng-controller' => 'snippets_controller'}
  .row
    %h3= 'Snippets'
    %ul.no-style
      %li.info-snippet{:'ng-repeat' => 'i in info_snippets'}
        %a{:'ng-click' => "select_snippet(i.id)"}
          .subject{:'ng-show' => 'i.subject'}= "{{i.subject}}"
          .snippet-text {{i.text}}
          .event-date{:'ng-show' => 'i.event_date'}= "Date: {{i.event_date}}"
    .row.edit-and-destroy{:'ng-show' => 'info_snippets.length == 1'}
      %ul.no-style
        %li
          %a.edit{:'ng-click' => 'edit_snippet(info_snippets[0].id)'}= 'Edit Snippet'
        %li
          %a.destroy{:'ng-click' => 'delete_snippet(info_snippets[0].id)', :'ng-confirm-click' => "Are you sure?"}= 'Delete Snippet'

