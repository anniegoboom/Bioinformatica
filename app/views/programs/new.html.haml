.container.edit-drug-container
  %h3= 'New Drug'

  .drug-form
  = form_for @drug, url: programs_path do |d|
    .error-explanation
      - if @drug.errors.any?
        %h2= 'Please fix the following errors:'
        %ul
          - @drug.errors.full_messages.each do |msg|
            %li= msg
    .input-content
      %ul.no-style
        %li
          = 'Name:'
          .input-field= d.text_field :name
        %li
          = 'Description:'
          .input-field
            = d.text_area :description, label: false
        %li
          = 'Company'
          .input-field= d.text_field :companies
        %li
          = 'Tags'
          .input-field= d.text_field :tags
        %li
          = 'Snippets'
          .input-field= d.text_area :info_snippets
    .create-button
      = d.submit 'Create Drug'
